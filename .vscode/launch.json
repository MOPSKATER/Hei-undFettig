    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/bin/www"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program with parameters",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "2000"
            ],
            "env": {
                "UNSAFE": "true"
            },
            "program": "${workspaceFolder}/bin/www"
        },
    ]
}